<div class = "show_content">
  <p>物件名：<%= @apartment.name %></p>

  <p>賃料：<%= @apartment.rent.to_s(:delimited) %> 円</p>

  <p>住所：<%= @apartment.address %></p>

  <p>築年数：<%= @apartment.age %> 年</p>

  <p>備考：<%= @apartment.remarks %></p>
</div>
<div class="border_line"></div>
<% c= nil %>

<% @accsess.each do |acs| %>
  <h4> <%= "最寄り駅#{c ||= 1}" %> </h4>
  <div class = "show_content">
    <p>路線名: <%= acs.line_name %></p>

    <p>駅名: <%= acs.station_name %></p>

    <p>徒歩: <%= acs.distance %>分</p>

  </div>
  <% c += 1 %>
<% end %>

<%= link_to "編集", edit_apartment_path(@apartment.id) %>
<%= link_to "戻る", apartments_path %>
