<h1>物件一覧</h1>

<table>
  <tr>
    <th>物件名</th>
    <th>賃料</th>
    <th>住所</th>
    <th>築年数</th>
    <th>備考</th>
  </tr>
  <% @apartments.each do |apt| %>
  <tr>
    <td> <%= apt.name %> </td>
    <td> <%= apt.rent %>円 </td>
    <td> <%= apt.address %> </td>
    <td> <%= apt.age %>年 </td>
    <td> <%= apt.remarks %> </td>
    <td> <%= link_to "詳細", apartment_path(apt.id) %> </td>
    <td> <%= link_to "編集", edit_apartment_path(apt.id) %> </td>
    <td> <%=  %>削除</td>
  </tr>
  <% end %>
</table>